@model List<CourseModel>
@{
    ViewData["Title"] = "Cursos atuais";
}
<h1 class="display-4">@ViewData["Title"]:</h1>

<div class="text-center">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">id</th>
                <th scope="col">Nome do Curso</th>
                <th scope="col">Duração do Curso (horas)</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null && Model.Any())
            {
                foreach(CourseModel course in Model)
                {
                    <tr>
                        <th scope="row">@course.CourseId</th>
                        <td>@course.CourseName</td>
                        <td>@course.DurationInHours</td>
                        <td>
                            !!!!! REMOVER ESSES BOTÕES
                            <div class="btn-group" role="group" aria-label="Basic example">
                                <a role="button" class="btn btn-primary">Editar</a>
                                <a role="button" class="btn btn-danger">Apagar</a>
                            </div>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
